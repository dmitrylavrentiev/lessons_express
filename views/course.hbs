{{#if course}}
{{#with course}}
<h1>Course: {{title}}</h1>
<div class="row">
    <div class="col s12 m8">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{author}}</span>
                <p>{{_id}}</p>
            </div>
            {{#if @root.isAuth}}
            <div class="card-action">
                <a class="waves-effect waves-light btn-flat" href="/courses/{{_id}}/edit">
                    <i class="material-icons right">edit</i>
                    Edit
                </a>
                <a class="waves-effect waves-light btn-flat" href="/courses/{{_id}}/remove">
                    <i class="material-icons right">delete</i>
                    Remove
                </a>
                <a id="addToCartBtn" class="waves-effect waves-light btn-flat" href="/cart/{{_id}}">
                    <i class="material-icons right">cart</i>
                    Add to cart
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</div>
{{/with}}
{{else}}
  <div class="card-panel teal red"> Error</div>

{{/if}}